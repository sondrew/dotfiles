syntax on
set number

"colorscheme 

" Show pretty tabs
set list
set listchars=tab:>-,precedes:<,extends:>,trail:~

"Attempt convert tabs to spaces
" size of a tab
set tabstop=8
" size of an "indent"
set shiftwidth=2
set autoindent
" always uses spaces instead of tab characters, and set size of space-tab
set expandtab
set softtabstop=2


" Always keep a couple of lines above/below curser
set scrolloff=3

" Always show status line
set laststatus=2



